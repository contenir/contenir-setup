{
    "name": "contenir/setup",
    "description": "Installation and setup module for Contenir CMS - handles initial configuration and database setup",
    "type": "library",
    "license": "MIT",
    "keywords": ["contenir", "mezzio", "cms", "installer", "setup"],
    "authors": [
        {
            "name": "Contenir",
            "email": "hello@contenir.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "mezzio/mezzio": "^3.18",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-servicemanager": "^3.0",
        "laminas/laminas-view": "^2.0",
        "laminas/laminas-db": "^2.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^3.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Contenir\\Setup\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contenir\\Setup\\Test\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@quality",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "analyze": "phpstan analyze --memory-limit=1G",
        "analyze:baseline": "phpstan analyze --memory-limit=1G --generate-baseline",
        "quality": [
            "@cs-check",
            "@analyze"
        ],
        "quality:fix": [
            "@cs-fix",
            "@quality"
        ],
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "pre-commit": [
            "@quality",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "analyze": "Run static analysis tool PHPStan.",
        "analyze:baseline": "Generate PHPStan baseline for existing issues.",
        "check": "Run all quality checks and tests.",
        "cs-check": "Check code against coding standards.",
        "cs-fix": "Automatically fix coding standard violations.",
        "quality": "Run code quality checks (coding standards + static analysis).",
        "quality:fix": "Fix coding standards and re-run quality checks.",
        "test": "Run unit tests.",
        "test-coverage": "Run unit tests with code coverage report.",
        "pre-commit": "Run pre-commit checks (quality + tests). Used by git hook."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "config-provider": "Contenir\\Setup\\ConfigProvider"
        }
    }
}